model AiTool {
  id                  Int           @id @default(autoincrement())
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt
  promoted            Boolean       @default(false)
  title               String
  shortDescription    String
  completeDescription String
  imageUrl            String
  linkToTool          String?
  likes               Int           @default(0)
  categories          CATEGORIES
  specialTags         SPECIAL_TAGS?
  pros                String?
  cons                String?
}

enum CATEGORIES {
  AI_DETECTION
  AI_GENERATION
  AI_OPTIMIZATION
  AI_TRAINING
  AI_VISUALIZATION
  AI_OTHER
}

enum SPECIAL_TAGS {
  MADE_IN_UKRAINE
  PROMOTED
}
